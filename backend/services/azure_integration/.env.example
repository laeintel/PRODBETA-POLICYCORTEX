# Environment Configuration
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Service Configuration
SERVICE_NAME=azure-integration
SERVICE_VERSION=1.0.0
SERVICE_PORT=8001
SERVICE_HOST=0.0.0.0

# Workers Configuration
WORKERS=4
WORKER_TIMEOUT=30
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_LOCATION=eastus

# Azure Key Vault
AZURE_KEY_VAULT_NAME=your-key-vault-name
AZURE_KEY_VAULT_URL=https://your-key-vault-name.vault.azure.net/

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key

# Azure Service Bus
AZURE_SERVICE_BUS_NAMESPACE=your-service-bus-namespace
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection-string

# Application Insights
APPLICATION_INSIGHTS_KEY=your-app-insights-key
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Database Configuration
AZURE_SQL_SERVER=your-sql-server.database.windows.net
AZURE_SQL_DATABASE=policycortex
AZURE_SQL_USERNAME=your-sql-username
AZURE_SQL_PASSWORD=your-sql-password
AZURE_SQL_PORT=1433
SQL_POOL_SIZE=20
SQL_MAX_OVERFLOW=30

# Cosmos DB Configuration
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-key
AZURE_COSMOS_DATABASE=policycortex

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=false
REDIS_POOL_SIZE=20

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Azure AD Configuration
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing Configuration
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Performance Configuration
SLOW_QUERY_THRESHOLD=1.0
ENABLE_SQL_TRACING=true

# Feature Flags
ENABLE_COST_OPTIMIZATION=true
ENABLE_POLICY_AUTOMATION=true
ENABLE_RBAC_ANALYSIS=true
ENABLE_NETWORK_SECURITY=true
ENABLE_PREDICTIVE_ANALYTICS=true

# Service URLs
API_GATEWAY_URL=http://localhost:8000
AZURE_INTEGRATION_URL=http://localhost:8001
AI_ENGINE_URL=http://localhost:8002
DATA_PROCESSING_URL=http://localhost:8003
CONVERSATION_URL=http://localhost:8004
NOTIFICATION_URL=http://localhost:8005

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# AI Model Configuration
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
AI_TIMEOUT_SECONDS=30