# Service Configuration
SERVICE_NAME=notification-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8005
SERVICE_HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# Database Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Communication Services
AZURE_COMMUNICATION_CONNECTION_STRING=your-acs-connection-string
AZURE_COMMUNICATION_EMAIL_DOMAIN=your-email-domain.com
AZURE_COMMUNICATION_SMS_NUMBER=+1234567890
AZURE_COMMUNICATION_ENDPOINT=https://your-acs-resource.communication.azure.com

# Email Providers
# SMTP
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@policycortex.com
FROM_NAME=PolicyCortex

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.com

# SMS Providers
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# AWS SNS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# MessageBird
MESSAGEBIRD_API_KEY=your-messagebird-api-key
MESSAGEBIRD_FROM_NUMBER=+1234567890

# Nexmo/Vonage
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret
NEXMO_FROM_NUMBER=+1234567890

# Push Notification Providers
# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id
FCM_SERVICE_ACCOUNT_PATH=path/to/service-account.json

# Apple Push Notification Service
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.policycortex.app
APNS_CERTIFICATE_PATH=path/to/certificate.p12
APNS_CERTIFICATE_PASSWORD=certificate-password
APNS_AUTH_KEY_PATH=path/to/auth-key.p8
APNS_SANDBOX=true

# OneSignal
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_REST_API_KEY=your-onesignal-rest-api-key

# Pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=mt1

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true
METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Health Check Configuration
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready