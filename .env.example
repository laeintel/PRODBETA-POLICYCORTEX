# Environment Configuration Example
# Copy this to .env and fill in your values
# For production, use .env.prod; for development, use .env.dev

# Environment Type (dev/prod)
NODE_ENV=production
ENVIRONMENT=prod

# Application URLs
NEXT_PUBLIC_APP_URL=https://policycortex.com
NEXT_PUBLIC_API_URL=https://api.policycortex.com
NEXT_PUBLIC_GRAPHQL_URL=https://graphql.policycortex.com/graphql

# Azure Configuration - MUST have matching entries for dev and prod
AZURE_TENANT_ID=9ef5b184-d371-462a-bc75-5024ce8baff7

# Development Azure Resources
AZURE_CLIENT_ID_DEV=1ecc95d1-e5bb-43e2-9324-30a17cb6b01c
AZURE_SUBSCRIPTION_ID_DEV=205b477d-17e7-4b3b-92c1-32cf02626b78
ACR_NAME_DEV=crpcxdev
AKS_CLUSTER_NAME_DEV=pcx42178531-aks
AKS_RESOURCE_GROUP_DEV=pcx42178531-rg

# Production Azure Resources  
AZURE_CLIENT_ID_PROD=8f0208b4-82b1-47cd-b02a-75e2f7afddb5
AZURE_SUBSCRIPTION_ID_PROD=9f16cc88-89ce-49ba-a96d-308ed3169595
ACR_NAME_PROD=crcortexprodvb9v2h
AKS_CLUSTER_NAME_PROD=policycortex-prod-aks
AKS_RESOURCE_GROUP_PROD=policycortex-prod-rg

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database
DATABASE_URL_DEV=postgresql://postgres:postgres@localhost:5432/policycortex_dev
DATABASE_URL_PROD=${DATABASE_URL_PROD}

# Redis Configuration
REDIS_URL=redis://host:6379
REDIS_URL_DEV=redis://localhost:6379
REDIS_URL_PROD=${REDIS_URL_PROD}
REDIS_PASSWORD=${REDIS_PASSWORD}

# NATS Configuration
NATS_URL=nats://host:4222
NATS_USER=${NATS_USER}
NATS_PASSWORD=${NATS_PASSWORD}

# EventStore Configuration
EVENTSTORE_URL=tcp://host:1113
EVENTSTORE_PASSWORD=${EVENTSTORE_PASSWORD}

# Security
JWT_SECRET=${JWT_SECRET}
JWT_SECRET_DEV=dev-secret-change-in-production
JWT_SECRET_PROD=${JWT_SECRET_PROD}

# CORS Configuration
CORS_ORIGIN=https://policycortex.com,https://www.policycortex.com
ALLOWED_ORIGINS=https://policycortex.com,https://www.policycortex.com,https://api.policycortex.com

# Azure OpenAI (if using)
AOAI_ENDPOINT=${AOAI_ENDPOINT}
AOAI_API_KEY=${AOAI_API_KEY}
AOAI_API_VERSION=${AOAI_API_VERSION}
AOAI_CHAT_DEPLOYMENT=${AOAI_CHAT_DEPLOYMENT}

# MSAL Configuration
NEXT_PUBLIC_MSAL_REDIRECT_URI=https://policycortex.com
NEXT_PUBLIC_MSAL_POST_LOGOUT_REDIRECT_URI=https://policycortex.com
NEXT_PUBLIC_CORE_API_SCOPE=api://policycortex-prod/.default
NEXT_PUBLIC_CORE_API_SCOPE_DEV=api://policycortex-dev/.default
NEXT_PUBLIC_CORE_API_SCOPE_PROD=api://policycortex-prod/.default

# Security Headers (Production)
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://api.policycortex.com/api/v1/csp-report

# PostgreSQL Credentials (Production)
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}

# Logging
RUST_LOG=info

# API Gateway
REQUIRE_AUTH=true

# Docker Image Version
VERSION=latest