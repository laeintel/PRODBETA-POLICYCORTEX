# PolicyCortex v2 Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
RUST_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/policycortex
REDIS_URL=redis://localhost:6379
EVENT_STORE_URL=http://localhost:2113

# Authentication
JWT_SECRET=development-secret-key-change-in-production
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Azure
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-org-id

# GraphQL
APOLLO_KEY=your-apollo-key
APOLLO_GRAPH_REF=your-graph-ref

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
ENABLE_QUANTUM_OPTIMIZATION=true
ENABLE_BLOCKCHAIN_AUDIT=true
ENABLE_FEDERATED_LEARNING=true
ENABLE_POLICY_MARKETPLACE=true
ENABLE_GAMIFICATION=true

# Edge Computing
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# Blockchain
BLOCKCHAIN_NETWORK=local
BLOCKCHAIN_DIFFICULTY=4

# ML Models
ML_MODEL_PATH=/models
ENABLE_AUTOML=true
ENABLE_NAS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
RUST_LOG=debug
ENABLE_STRUCTURED_LOGGING=true

# Cors
CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# Service URLs (for local development)
CORE_SERVICE_URL=http://localhost:8080
GRAPHQL_GATEWAY_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
EDGE_SIMULATOR_URL=http://localhost:8787