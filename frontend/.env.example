# Application Configuration
VITE_APP_NAME=PolicyCortex
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-Powered Azure Governance Intelligence Platform"

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000

# Azure AD Configuration
VITE_AZURE_CLIENT_ID=your-azure-client-id
VITE_AZURE_TENANT_ID=your-azure-tenant-id
VITE_AZURE_REDIRECT_URI=http://localhost:3000
VITE_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true

# Development Configuration
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_SIZE=100

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv

# Chart Configuration
VITE_CHART_ANIMATION_DURATION=300
VITE_CHART_REFRESH_INTERVAL=30000

# Notification Configuration
VITE_NOTIFICATION_DURATION=5000
VITE_NOTIFICATION_MAX_COUNT=3

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_IDLE_TIMEOUT=1800000
VITE_CSRF_HEADER_NAME=X-CSRF-Token

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=

# Azure Services
VITE_AZURE_STORAGE_ACCOUNT=
VITE_AZURE_STORAGE_CONTAINER=
VITE_AZURE_FUNCTIONS_URL=
VITE_AZURE_COGNITIVE_SERVICES_KEY=

# Monitoring
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_TRACKING=false
VITE_ENABLE_USER_ANALYTICS=false